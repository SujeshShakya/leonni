@model BaseViewModel
@using Leonni.Core.Helpers
@{
    ViewBag.Title = "Language";
}
<h2 class="txt">
    Language</h2>
<div class="create_but_last1">
    <div id="lft">
    </div>
    <div id="mid">
        <h3 class="">@Html.ActionLink("Create", "Create", "Language")</h3>
    </div>
    <div id="rgt">
    </div>
</div>
<table id="languageList">
</table>
@section RightMenu
{
    @{Html.RenderPartial("NormalRightMenu");}
}
<link href="~/Content/flexigrid.pack.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/flexigrid.pack.js" type="text/javascript"></script>
<script type="text/javascript" language="javascript">

    function RemoveRow(id) {
        $('#' + id).remove();
        $("#languageList").flexReload();
    }

    $("#languageList").flexigrid({
        url: LeonniUrl("/Language/AjaxGetLanguages"),
        dataType: 'json',
        onError: function (data) {
            if (data.status == "401")
            { }
            //  window.location.href = InViewUrl("");
        },
        colModel: [
		{ display: 'Language Name', name: 'LanguageName', width: 150, sortable: true, align: 'left' },
		{ display: 'Language Code', name: 'LanguageCode', width: 150, sortable: true, align: 'left' },
		{ display: 'Language Direction', name: 'LanguageDirection', width: 150, sortable: true, align: 'left' },
        { display: 'Action', name: 'Action', width: 150, sortable: false, align: 'left' },

		],
        sortname: "",
        sortorder: "asc",
        width: 720,
        height: 150,
        striped: false,
        showTableToggleBtn: true,
        usepager: true
    });

</script>
