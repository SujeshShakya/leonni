@model ProjectModel
@{
    ViewBag.Title = "Project";
}
<div id="content-wrapper">
    <div class="user-page">
        <div class="middle-hr">
        </div>
        <div class="clear">
        </div>
        @using (Html.BeginForm("Project", "ControlPanel", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
@* @Html.HiddenFor(x => x.IsNew)*@
            @Html.HiddenFor(x=>x.Id)
            @Html.HiddenFor(x=>x.CreatedBy)
            @Html.HiddenFor(x => x.CreatedDate)
            //if (Model.IsNew)
            //{
            <div class="blue-btn view-profile-btn createBtn">
                <input type="submit" id="submit_link" name="submit_link" value="Create Project" /></div>
            //}
        @* else
            {*@
        <div class="profile-btns" style="display: none">
           <div class="blue-btn view-profile-btn createBtn">
                <input type="submit" id="submit_link" name="submit_link" value="Update Project" /></div>
            <div class='blue-btn update-btn'>
                <a href='~/ControlPanel/ViewProject/" + @Model.Id + "'>View Project</a></div>
        </div>
        @* }*@
        <div class="user-biodata">
            <div class="field-1">
                <div class="field">@Html.TextBoxFor(model => model.Title, new { @placeholder = "Title" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
                <div style="width: 230px; float: left;" class="field">
                    @Html.DropDownListFor(x => x.CategoryId, Model.Categories, new { @onchange = "GetDisciplines(this,'entry')" })
                </div>
                <div style="width: 230px; float: left;" class="field">
                    @Html.DropDownListFor(x => x.DisciplineId, Model.Disciplines, new { @class = "Disciplines" })
                    @*@Html.ValidationMessageFor(model => model.DisciplineId)*@</div>
            </div>
            <div class="clear">
            </div>
            <div class="field-2">
                <div style="width: 230px; float: left;" class="field">
                    @Html.DropDownListFor(x => x.CountryName, Model.Countries, new { @onchange = "GetProvinces(this,'entry')", @class = "CountryName" })</div>
                <div style="width: 230px; float: left;" class="field">
                    @Html.DropDownListFor(x => x.StateId, Model.Provinces, new { @class = "Provinces" })</div>
            </div>
            <div class="clear">
            </div>
            <div style="margin-top: 20px">
                <div class="field">@Html.TextBoxFor(m => m.Cost, new { @placeholder = "Cost" })
                    @Html.ValidationMessageFor(model => model.Cost)
                </div>
                <div class="field">@Html.TextBoxFor(m => m.Inversion, new { @placeholder = "Inversion" })
                    @Html.ValidationMessageFor(model => model.Inversion)
                </div>
            </div>
            <div class="clear">
            </div>
            <div class="field-3" style="margin-bottom: 63px;">
                <div class="summary-field">@Html.TextBoxFor(m => m.Resume, new { @placeholder = "Summary 120 characters" })</div>
                <div class="summary">@Html.TextAreaFor(m => m.Description, new { @placeholder = "Content" })
                    @Html.ValidationMessageFor(model => model.Inversion)
                </div>
                @* <div class="summary-field" style="width: 200px;">@Html.TextBoxFor(m => m.YoutubeLink, new { @placeholder = "Youtube link" })
                        @Html.ValidationMessageFor(model => model.YoutubeLink)
                    </div>
                    <div>
                        <div class="summary-field" style="width: 200px; float: left;">
                            <input type="text" value="photo" /></div>
                        <div class="summary-field" style="width: 200px; float: left">@Html.TextBoxFor(m => m.Link, new { @placeholder = "Link" })
                            @Html.ValidationMessageFor(model => model.Link)
                        </div>
                    </div>*@
            </div>
            @* <div>
                    <div class="clear">
                    </div>
                    <div class="photo-frames">
                        <div class="frame">
                        </div>
                        <div class="frame">
                        </div>
                        <div class="frame">
                        </div>
                        <div class="frame">
                        </div>
                        <div class="clear">
                        </div>
                    </div>
                    <div class="clear">
                    </div>
                    <div class="red-btn" style="width: 120px; float: left; margin-bottom: 10px;">
                        <input type="button" value="remove" /></div>
                    <div class="blue-btn" style="width: 120px; float: left;">
                        <input type="button" value="disable" /></div>
                </div>*@
        </div>
        }
        @{Html.RenderAction("ProjectsUploads", Model.ProjectUploads);}
        <div class="clear">
        </div>
    </div>
</div>
@{Html.RenderAction("ProjectSearch", "ControlPanel");}
